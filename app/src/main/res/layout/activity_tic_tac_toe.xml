<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TIcTacToe">
    
    <TextView
        android:id="@+id/tv_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player: 1"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/col00"/>

    <TextView
        android:id="@+id/col00"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintBottom_toTopOf="@+id/divider10"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/divider10"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/col00"
        app:layout_constraintStart_toStartOf="@+id/col00"
        app:layout_constraintEnd_toEndOf="@+id/col22"
        app:layout_constraintBottom_toTopOf="@+id/col10"/>

    <TextView
        android:id="@+id/col10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/col00"
        app:layout_constraintTop_toBottomOf="@+id/divider10"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintBottom_toTopOf="@+id/divider20"/>

    <View
        android:id="@+id/divider20"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/col10"
        app:layout_constraintStart_toStartOf="@+id/col10"
        app:layout_constraintEnd_toEndOf="@+id/col22"
        app:layout_constraintBottom_toTopOf="@+id/col20" />

    <TextView
        android:id="@+id/col20"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/col00"
        app:layout_constraintTop_toBottomOf="@id/divider20"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/col00"
        app:layout_constraintBottom_toBottomOf="@+id/col20"
        app:layout_constraintStart_toEndOf="@+id/col00"
        app:layout_constraintEnd_toStartOf="@+id/col01"/>

    <TextView
        android:id="@+id/col01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/divider2"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toTopOf="@+id/col00" />

    <TextView
        android:id="@+id/col11"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/divider10"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintEnd_toStartOf="@+id/divider2"/>

    <TextView
        android:id="@+id/col21"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/divider20"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintEnd_toStartOf="@+id/divider2"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/col01"
        app:layout_constraintBottom_toBottomOf="@+id/col22"
        app:layout_constraintStart_toEndOf="@+id/col01"
        app:layout_constraintEnd_toStartOf="@+id/col02"/>

    <TextView
        android:id="@+id/col02"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider2"
        app:layout_constraintTop_toTopOf="@+id/col01" />

    <TextView
        android:id="@+id/col12"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/col02"
        app:layout_constraintStart_toEndOf="@+id/divider2"
        app:layout_constraintTop_toBottomOf="@+id/divider10"/>

    <TextView
        android:id="@+id/col22"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/col02"
        app:layout_constraintStart_toEndOf="@+id/divider2"
        app:layout_constraintTop_toBottomOf="@id/divider20" />

</android.support.constraint.ConstraintLayout>